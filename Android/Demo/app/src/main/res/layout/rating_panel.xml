<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/loadingpanel"
    android:layout_width="@dimen/loadingpanel_width"
    android:layout_height="@dimen/loadingpanel_width"
    android:gravity="center|top"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:orientation="vertical"
    android:background="@drawable/input_border">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:id="@+id/dialog_ratingBar"
            android:progressDrawable="@drawable/room_rating_bar"
            android:rating="3.0"
            android:isIndicator="false"
            android:minHeight="36dip"
            android:maxHeight="60dip"
            style="?android:attr/ratingBarStyle"
            android:stepSize="1"
            android:paddingTop="10dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="70dp" />
        <TextView
            android:id="@+id/dialog_confirm"
            android:layout_width="135dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/dialog_ratingBar"
            android:layout_marginTop="50dp"
            android:background="@drawable/confirm2"/>
    </RelativeLayout>


</LinearLayout>