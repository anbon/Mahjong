<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="com.example.demo.NearbyTab">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/search_input_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60dp"
            android:background="@drawable/input_border">
            <EditText
                android:id="@+id/search_input"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:background="#00000000"
                android:maxLength="8"
                android:inputType="number"
                android:singleLine="true"
                android:padding="15dp"
                android:hint="輸入ID"
                android:textSize="16sp"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/search_confirm"
            android:layout_width="130dp"
            android:layout_height="56dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/search_input_container"
            android:layout_marginTop="50dp"
            android:background="@drawable/confirm2"/>

    </RelativeLayout>

</ScrollView>
