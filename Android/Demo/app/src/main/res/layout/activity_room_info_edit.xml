<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#ffffff">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/info_bg"
            >
            <ImageView
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="14dp"
                android:src="@drawable/back"/>
            <ImageView
                android:id="@+id/info_photo"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="25dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="40dp"
                />
            <TextView
                android:id="@+id/room_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/info_photo"
                android:layout_toRightOf="@+id/info_photo"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="18dp"
                android:background="@drawable/room_name_background"
                android:textColor="#ffffff"
                android:textSize="28sp"
                android:text="北新路"/>

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="#ffffff"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#effbfd">
            <TextView
                android:id="@+id/create_host"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:textColor="#3f3f3f"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColorHint="#c8cbc9"
                android:singleLine="true"
                android:text="房主名稱"
                android:background="#00000000"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#f7f7f7"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:textColor="#3f3f3f"
                android:textSize="17sp"
                android:text="人缺"/>
            <RelativeLayout
                android:layout_width="64dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="24dp"
                android:background="@drawable/btn_blue_round_bg"
                android:clickable="false">
                <TextView
                    android:id="@+id/create_ppl_in_need"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ffffff"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text="人 數"
                    android:textSize="12sp"/>
            </RelativeLayout>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="#ffffff"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:clickable="true"
            android:background="#effbfd"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:textColor="#3f3f3f"
                android:textSize="17sp"
                android:text="底"/>
            <TextView
                android:id="@+id/create_base"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="24dp"

                android:textColor="#3f3f3f"
                android:maxLength="5"
                android:singleLine="true"
                android:digits="0123456789"
                android:textSize="18sp"
                android:background="#00000000"
                android:inputType="number"
                android:textStyle="bold"
                android:text="300"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#3f3f3f"
                android:layout_toLeftOf="@+id/create_base"
                android:layout_centerVertical="true"
                android:layout_marginRight="4dp"
                android:text="$"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#f7f7f7"
            android:clickable="true"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:textColor="#3f3f3f"
                android:textSize="17sp"
                android:text="抬"/>
            <TextView
                android:id="@+id/create_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="24dp"
                android:textColor="#3f3f3f"
                android:maxLength="5"
                android:singleLine="true"
                android:digits="0123456789"
                android:textSize="18sp"
                android:background="#00000000"
                android:inputType="number"
                android:textStyle="bold"
                android:text="25"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#3f3f3f"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/create_unit"
                android:layout_marginRight="4dp"
                android:text="$"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#effbfd"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:textColor="#3f3f3f"
                android:textSize="17sp"
                android:text="時間"/>
            <RelativeLayout
                android:layout_width="64dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="24dp"
                android:background="@drawable/btn_blue_round_bg"
                android:clickable="false">
                <TextView
                    android:id="@+id/create_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ffffff"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text="4pm"
                    android:textSize="13sp"/>
            </RelativeLayout>
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#f7f7f7"
            android:clickable="true"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:textColor="#3f3f3f"
                android:textSize="17sp"
                android:text="將數"/>

            <TextView
                android:id="@+id/create_circle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="24dp"
                android:digits="123456789"
                android:maxLength="1"
                android:background="#00000000"
                android:textColor="#3f3f3c"
                android:textSize="18sp"
                android:inputType="number"
                android:textStyle="bold"
                android:text="1"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="#ffffff"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#effbfd"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:textColor="#3f3f3f"
                android:textSize="17sp"
                android:text="桌型"/>
            <RelativeLayout
                android:layout_width="64dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="24dp"
                android:background="@drawable/btn_blue_round_bg"
                android:clickable="false">
                <TextView
                    android:id="@+id/create_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ffffff"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text="手動"
                    android:textSize="12sp"/>
            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="#f7f7f7"
            android:clickable="true"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:textColor="#3f3f3f"
                android:textSize="17sp"
                android:text="成員"/>
            <ImageView
                android:id="@+id/photo0"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="24dp"
                android:src="@drawable/more2"/>
            <ImageView
                android:id="@+id/photo1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="95dp"
                android:visibility="visible"
                android:src="@drawable/more2"/>
            <ImageView
                android:id="@+id/photo2"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="166dp"
                android:visibility="visible"
                android:src="@drawable/more2"/>
            <ImageView
                android:id="@+id/photo3"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="237dp"
                android:visibility="visible"
                android:src="@drawable/more2"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#effbfd"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:textColor="#3f3f3f"
                android:textSize="17sp"
                android:text="菸"/>
            <RelativeLayout
                android:layout_width="64dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="24dp"
                android:background="@drawable/btn_blue_round_bg"
                android:clickable="false">
                <TextView
                    android:id="@+id/create_cigarette"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ffffff"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text="不菸"
                    android:textSize="12sp"/>
            </RelativeLayout>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="#ffffff"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="#f7f7f7"

            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="20dp"
                android:textColor="#3f3f3f"
                android:textSize="17sp"
                android:text="規則"/>

            <TextView
                android:id="@+id/create_rule"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="20dp"
                android:maxLines="5"
                android:textColor="#3f3f3f"
                android:textSize="17sp"
                android:gravity="start"
                android:background="#00000000"
                android:textColorHint="#c8cbc9"
                android:lineSpacingExtra="1dp"
                android:text=""/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:background="#ffffff"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="250dp"
                android:layout_height="55dp"
                android:background="@drawable/btn_confirm_bg2"
                android:layout_centerInParent="true"
                android:clickable="true"
                android:layout_toRightOf="@+id/create_center"
                android:gravity="center"
                android:textSize="24sp"
                android:textColor="#35acc5"
                android:text="分 享"/>

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="15dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="250dp"
                android:layout_height="55dp"
                android:background="@drawable/btn_delete_bg"
                android:layout_centerInParent="true"
                android:clickable="true"
                android:layout_toRightOf="@+id/create_center"
                android:gravity="center"
                android:textSize="24sp"
                android:textColor="#FF3B30"
                android:text="刪 除 房 間"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="30dp"/>
    </LinearLayout>
</ScrollView>


