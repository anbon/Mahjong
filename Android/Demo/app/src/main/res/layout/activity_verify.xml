<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="60dp"
    android:paddingRight="60dp"
    android:paddingTop="60dp"
    android:paddingBottom="40dp"
    android:background="#61cee5"
    tools:context="com.example.demo.VerifyActivity">




    <EditText
        android:id="@+id/verify_number_panel"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/edit_number_bg"
        android:layout_centerHorizontal="true"
        android:paddingLeft="30dp"
        android:hint="輸入手機驗證碼"
        android:textSize="18sp"
        android:gravity="left|center" />
    <TextView
        android:id="@+id/verify_remessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/verify_number_panel"
        android:layout_alignParentRight="true"
        android:layout_marginTop="15dp"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:text="重發簡訊"
        android:visibility="invisible"
        android:clickable="true"
        android:onClick="ReMessage"
        />

    <TextView
        android:id="@+id/signin_confirm"
        android:layout_width="130dp"
        android:layout_height="56dp"
        android:layout_below="@id/verify_number_panel"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/white_confirm"
        android:clickable="true"
        android:onClick="Verify"/>
        />


</RelativeLayout>
