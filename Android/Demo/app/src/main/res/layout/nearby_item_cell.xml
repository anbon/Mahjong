<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="horizontal">
    <RelativeLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/nearby_photo_linear"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">
            <View
                android:layout_weight="0.1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

            </View>
            <ImageView
                android:id="@+id/nearby_photo"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:adjustViewBounds="true"
                android:scaleType="centerInside"
                android:src="@drawable/logo"/>
            <View
                android:layout_weight="0.1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

            </View>
        </LinearLayout>
        <TextView
            android:id="@+id/nearby_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nearby_photo_linear"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="0dp"
            android:textStyle="bold"
            android:textSize="16sp"
            android:text="陳先生"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_weight="3"
        android:layout_width="0dp"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_weight="1.6"
                android:layout_height="0dp">

                <ImageView
                    android:id="@+id/nearby_ic_vacant"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="-4dp"
                    android:src="@drawable/need3"/>
                <TextView
                    android:id="@+id/nearby_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/nearby_ic_vacant"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="26dp"
                    android:textSize="21sp"
                    android:text="中和家樂福"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_weight="1.1"
                android:layout_height="0dp">
                <ImageView
                    android:id="@+id/nearby_ic_base"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/base"/>
                <TextView
                    android:id="@+id/nearby_base"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/nearby_ic_base"
                    android:layout_marginLeft="4dp"
                    android:layout_centerVertical="true"
                    android:textColor="#646464"
                    android:text="$200"
                    android:textSize="15sp"
                    android:layout_marginTop="3dp"/>
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/nearby_base"
                    android:layout_marginLeft="7dp"
                    android:background="#61cee5"
                    android:layout_centerVertical="true"
                    >
                </View>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/nearby_base"
                    android:layout_marginLeft="18dp"
                    android:textSize = "17sp"
                    android:text="抬"/>
                <TextView
                    android:id="@+id/nearby_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/nearby_base"
                    android:layout_marginLeft="40dp"
                    android:textColor="#646464"
                    android:textSize = "15sp"
                    android:text="$20"/>
                <ImageView
                    android:id="@+id/nearby_ic_time"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_toRightOf="@+id/nearby_unit"
                    android:layout_marginLeft="8dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/time"/>
                <TextView
                    android:id="@+id/nearby_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/nearby_ic_time"
                    android:layout_marginLeft="10dp"
                    android:textColor="#646464"
                    android:textSize = "15sp"
                    android:text="4pm"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.4"></View>
        </LinearLayout>
        <View
            android:id="@+id/nearby_divider"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#dbdbdb">
        </View>


    ></RelativeLayout>
    <RelativeLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/nearby_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:textSize="16sp"
            android:text = "9.2km"/>
        <View

            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#dbdbdb">
        </View>
    </RelativeLayout>

</LinearLayout>
