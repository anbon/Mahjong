<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/lighter_background"
        android:padding="10dp" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/ios_blue"
            android:textSize="18dp"
            android:text="@string/login_btn_cancel" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/darker_gray"
            android:textSize="18dp"
            android:text="@string/age" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:textColor="@color/ios_blue"
            android:textSize="18dp"
            android:text="@string/login_btn_confirm" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:gravity="center" >
		
        <com.example.demo.util.CycleWheelView
	        android:id="@+id/cycleWheelView1"
	        android:layout_width="match_parent"
	        android:layout_height="100dp">
   		</com.example.demo.util.CycleWheelView>
    

    <!--<com.common.view.CycleWheelView
        android:id="@+id/cycleWheelView2"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_weight="1" >
    </com.common.view.CycleWheelView>-->
    


    </LinearLayout>

</LinearLayout>
